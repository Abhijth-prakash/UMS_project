<%- include("../layouts/header.ejs") %>
<br><br>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card bg-dark text-white p-4 shadow" style="width: 100%; max-width: 400px;">

        <h1 class="text-center text-danger fw-bold mb-4">Update Profile</h1>

        <div class="text-center mb-4">
            <img src="userImages/<%= user.image %>" alt="profile" class="rounded-circle" style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #e94560;">
        </div>

        <% if (typeof message !== 'undefined') { %>
            <h4 class="text-center text-white bg-success p-2 rounded"><%= message %></h4>
        <% } %>

        <div id="error" class="text-danger mb-2"></div>
        <form id="form" action="/edit" method="post" enctype="multipart/form-data">

            <input type="hidden" name="user_id" value="<%= user._id %>">

            <div class="mb-3">
                <input id="name" type="text" name="name" value="<%= user.name %>" placeholder="Enter Name" required class="form-control bg-secondary text-white border-0">
            </div>

            <div class="mb-3">
                <input id="email" type="email" name="email" value="<%= user.email %>" placeholder="Enter Email" required class="form-control bg-secondary text-white border-0">
            </div>

            <div class="mb-3">
                <input id="mobile" type="text" name="mobile" value="<%= user.mobile %>" placeholder="Enter Mobile No" required class="form-control bg-secondary text-white border-0">
            </div>

            <div class="mb-3">
                <input type="file" name="image" class="form-control bg-secondary text-white border-0">
            </div>

            <div class="d-grid mb-3">
                <input type="submit" value="Update" class="btn btn-danger">
            </div>

        </form>

    </div>
</div>


<script src="/script.js"></script>


<%- include("../layouts/footer.ejs") %>