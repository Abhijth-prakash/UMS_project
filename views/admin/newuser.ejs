<%- include("../layouts/header.ejs") %>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card bg-dark text-white p-4 shadow" style="width: 100%; max-width: 400px;">

        <h1 class="text-center text-danger fw-bold mb-4">Add New User</h1>

        <% if (typeof message !== 'undefined') { %>
            <h4 class="text-center text-white bg-danger p-2 rounded"><%= message %></h4>
        <% } %>


         <div id="error" class="text-danger mb-2"></div>
        <form  id="form" action="/admin/newuser" method="post" enctype="multipart/form-data">

            <div class="mb-3">
                <input id="name" type="text" name="name" placeholder="Name" required class="form-control bg-secondary text-white border-0">
            </div>

            <div class="mb-3">
                <input id="email" type="email" name="email" placeholder="Email" required class="form-control bg-secondary text-white border-0">
            </div>

            <div class="mb-3">
                <input id="mobile" type="number" name="mno" placeholder="Mobile" required class="form-control bg-secondary text-white border-0">
            </div>

            <div class="mb-3">
                <input type="file" name="image" required class="form-control bg-secondary text-white border-0">
            </div>

            <div class="mb-3">
                <input id="password" type="password" name="password" placeholder="Password" required class="form-control bg-secondary text-white border-0">
            </div>

            <div class="d-grid mb-3">
                <input type="submit" value="Add User" class="btn btn-danger">
            </div>

        </form>

        <div class="text-center">
            <a href="/admin/dashboard" class="btn btn-outline-secondary w-100">Dashboard</a>
        </div>

    </div>
</div>

<script src="/script.js"></script>

<%- include("../layouts/footer.ejs") %>