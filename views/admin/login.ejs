<%- include("../layouts/header.ejs") %>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card bg-dark text-white p-4 shadow" style="width: 100%; max-width: 400px;">

        <h1 class="text-center text-danger fw-bold mb-4">Admin Login</h1>

        <% if (typeof message !== 'undefined') { %>
            <h4 class="text-center text-white bg-danger p-2 rounded"><%= message %></h4>
        <% } %>

        <form action="" method="post">

            <div class="mb-3">
                <input type="email" name="email" placeholder="Email" required class="form-control bg-secondary text-white border-0">
            </div>

            <div class="mb-3">
                <input type="password" name="password" placeholder="Password" required class="form-control bg-secondary text-white border-0">
            </div>

            <div class="d-grid mb-3">
                <input type="submit" value="Login" class="btn btn-danger">
            </div>

        </form>

        <div class="text-center">
            <a href="/admin/passforget" class="text-secondary text-decoration-none">Forgot Password?</a>
        </div>

    </div>
</div>

<%- include("../layouts/footer.ejs") %>