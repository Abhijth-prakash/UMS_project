<%- include("../layouts/header.ejs") %>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="card bg-dark text-white p-4 shadow" style="width: 100%; max-width: 400px;">
        
        <h1 class="text-center text-danger fw-bold mb-4">Login</h1>

        <% if (typeof message !== 'undefined') { %>
            <h4 class="text-center text-white bg-danger p-2 rounded"><%= message %></h4>
        <% } %>

         <div id="error" class="text-danger mb-2"></div>

        <form id="form"  action="/login" method="post">

            <div class="mb-3">
                <input  id="email" type="email" name="email" placeholder="Email" required class="form-control bg-secondary text-white border-0">
            </div>

            <div class="mb-3">
                <input id="password" type="password" name="password" placeholder="Password" required class="form-control bg-secondary text-white border-0">
            </div>

            <div class="d-grid mb-3">
                <input type="submit" value="Login" class="btn btn-danger">
            </div>

        </form>

        <div class="text-center">
            <a href="/forget" class="text-secondary text-decoration-none">Forgot Password?</a>
        </div>
        <div class="text-center mt-2">
            <a href="/verification" class="text-secondary text-decoration-none">Verification</a>
        </div>

    </div>
</div>

<script src="/script.js"></script>

<%- include("../layouts/footer.ejs") %>